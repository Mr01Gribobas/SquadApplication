<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SquadApplication.ViewCustom.AppendPolygonPage"
             BackgroundImageSource="hkauthorize.jpg"
             Title="AppendPolygonPage">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10">
        <HorizontalStackLayout>
        <Label Text="Name"/>
        <Entry Placeholder="Name" PlaceholderColor="Gray"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
        <Label Text="Coordinates"/>
            <Entry PlaceholderColor="Grey" Placeholder="60.043010, 30.104596"/>
        </HorizontalStackLayout>
        <Button VerticalOptions="End" Command="{Binding AppendPolygonCommand}"/>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SquadApplication.ViewCustom.AppendPolygonPage"
             BackgroundImageSource="updateprofileandequip.jpg"
             Title="AppendPolygonPage">
    <VerticalStackLayout 
        Background="#80808080"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Padding="10">
        <HorizontalStackLayout >
        <Label Text="Name" TextColor="Gold" FontSize="30"/>
            <Entry 
                Margin="10,-12,0,0"
                Placeholder="NamePolygon"
                FontSize="30"
                TextColor="AliceBlue"
                Text="{Binding PolygonName}"
                PlaceholderColor="Gray"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Coordinates" TextColor="Gold" FontSize="20"/>
            <Entry
                Margin="10,-12,0,0" 
                PlaceholderColor="Grey"
                FontSize="20" 
                TextColor="AliceBlue"
                Text="{Binding PolygonCoordinates}"
                Placeholder="60.043010, 30.104596"/>
                
        </HorizontalStackLayout>
        <Button VerticalOptions="End" Text="Create" Command="{Binding AppendPolygonCommand}"/>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SquadApplication.ViewCustom.AppendPolygonPage"
             BackgroundImageSource="hkauthorize.jpg"
             Title="AppendPolygonPage">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10">
        <HorizontalStackLayout >
        <Label Text="Name" TextColor="AliceBlue" FontSize="30"/>
            <Entry Margin="10,-12,0,0" Placeholder="NamePolygon" FontSize="30" PlaceholderColor="Gray"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Coordinates" TextColor="AliceBlue" FontSize="20"/>
            <Entry Margin="10,-12,0,0" PlaceholderColor="Grey" FontSize="20" Placeholder="60.043010, 30.104596"/>
        </HorizontalStackLayout>
        <Button VerticalOptions="End" Command="{Binding AppendPolygonCommand}"/>
    </VerticalStackLayout>
</ContentPage>